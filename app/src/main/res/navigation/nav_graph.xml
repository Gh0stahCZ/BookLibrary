<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/libraryFragment">

  <fragment
    android:id="@+id/libraryFragment"
    android:name="com.tomaschlapek.booklibrary.ui.library.LibraryFragment"
    android:label="library_fragment"
    tools:layout="@layout/library_fragment">
    <action
      android:id="@+id/action_libraryFragment_to_bookDetailFragment2"
      app:destination="@id/bookDetailFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    <action
      android:id="@+id/action_libraryFragment_to_bookAddFragment"
      app:destination="@id/bookAddFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
  </fragment>
  <fragment
    android:id="@+id/bookDetailFragment"
    android:name="com.tomaschlapek.booklibrary.ui.bookdetail.BookDetailFragment"
    android:label="BookDetailFragment"/>
  <fragment
    android:id="@+id/bookAddFragment"
    android:name="com.tomaschlapek.booklibrary.ui.bookadd.BookAddFragment"
    android:label="BookAddFragment"/>
</navigation>